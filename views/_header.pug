header.header 
    nav.nav.nav--tours 
        a.nav__el(href='/') All tours 
    .header__logo
        img(src='/img/logo-white.png' alt='Natours logo')
    nav.nav.nav--user 
        //- user is variable that created in isLoggedIn function if logged in the user = current user
        if user
            .nav__favorite-container
                a.nav__el(href='/my-favorites-tours')
                    svg.nav__favorite-icon
                        use(xlink:href='/img/icons.svg#icon-heart')
                    if user.favoriteTours.length
                        span.nav__favorite-count= user.favoriteTours.length
                    else
                        span.nav__favorite-count
            //- a.nav__el.nav__el--logout Log out 
            //- a.nav__el(href='/profile')
            //-     img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
            //-     span= user.name.split(' ')[0]
            div.nav__user
                a.nav__el.nav__user-toggle(href='#')
                    img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
                    span= user.name.split(' ')[0]
                ul.nav__dropdown.hidden
                    li: a.nav__el.nav__el--profile(href='/profile') Profile
                    li: a.nav__el.nav__el--logout Log out
                    li: a.nav__el.nav__el--delete_my_account Delete Account
        else
            a.nav__el(href='/login') Log in
            a.nav__el.nav__el--cta(href='/signup') Sign up